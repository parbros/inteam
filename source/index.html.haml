  %head
    %title Login - Canvas Admin
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "", name: "description"}/
    %meta{content: "", name: "author"}/
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,800italic,400,600,800", rel: "stylesheet", type: "text/css"}/
    = stylesheet_link_tag "Login.css"
  %body
    #login-container
      #logo
        %a{href: "/"}
          %img{alt: "Logo", src: "/images/logos/logo-login.png"}/
      #login
        %h3 Welcome to Canvas Collaboration.
        %h5 Please sign in to get access.
        %form#login-form.form{action: "/dashboard"}
          .form-group
            %label{for: "login-username"} Username
            %input#login-username.form-control{placeholder: "Username", type: "text"}/
          .form-group
            %label{for: "login-password"} Password
            %input#login-password.form-control{placeholder: "Password", type: "password"}/
          .form-group
            %button#login-btn.btn.btn-primary.btn-block{type: "submit"}
              Signin Â 
              %i.fa.fa-play-circle
        %a.btn.btn-default{href: "javascript:;"} Forgot Password?
      / /#login
      %a#signup-btn.btn.btn-lg.btn-block{href: "javascript:;"}
        Create an Account
    / /#login-container
    %script{src: "./js/libs/jquery-1.9.1.min.js"}
    %script{src: "./js/libs/jquery-ui-1.9.2.custom.min.js"}
    %script{src: "./js/libs/bootstrap.min.js"}
    %script{src: "./js/App.js"}
    %script{src: "./js/Login.js"}